{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}

<style>
    .filet{
        margin : 50px auto 0 auto;
        width:80px;
        height:15px;
        background:#18BC9C;
    }

    h1{
        letter-spacing: 8px;
        text-transform: uppercase;
        color:white;
    }
    .title{
        position:absolute;
    }
    .img_top{
        display:flex;
        justify-content:center;
        align-items:center;
        margin-top:30px;
        width:100%;
        height:350px;
        object-fit: cover;
        overflow:hidden;
        position:relative;
        margin-bottom: 100px;
    }
    img{
        width:100%;
        position:absolute;
    }
    .filter{
        width:100%;
        height:100%;
        background:black;
        opacity: .50;
        position:absolute;
    }
    .recipe_ingredients h2{
        margin-bottom:20px
    }
</style>


    <div class="img_top">
        <img src="{{ recipe.imgTop }}" alt="">
        <div class="filter"></div>
        <div class="title">
            <h1 class="text-center mb-5">{{ recipe.title }}</h1>
            <div class="filet "></div>
        </div>
    
    </div>
        <div class="row">
            <div class="recipe_img col-6 m-0">
                    <img class="col p-0" src="{{ recipe.image }}" alt="" srcset="">
            </div>
            <div class="recipe_info col-6 pl-4">
                <div class="note">
                <h2>Note</h2>
                    {{ recipe.note }} / 5
                    <br>
                    <hr>

                </div>    
                <div class="recipe_ingredients mt-4">
                <h2>Ingr√©dients</h2>
                <p>{{ recipe.ingredient }}</p>
                </div>
            
            </div>
            <div class="recipe_description mt-5  p-3">
                <h2>Recette</h2>
                <hr>
                <p class="mt-4">{{ recipe.content }}</p>
            </div>
            
        
        </div>
         

    {{ include('recipe/_delete_form.html.twig') }} 
    
    <a type="button" class="btn btn-primary mt-5" href="{{ path('recipe_edit', {'id': recipe.id}) }}">Modifier la recette</a>
    <a type="button" class="btn btn-primary mt-5" href="{{ path('recipe_index') }}">Retourner aux recettes</a>

{% endblock %}
