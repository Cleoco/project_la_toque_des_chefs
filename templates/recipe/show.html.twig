{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-5">{{ recipe.title }}</h1>
        <div class="row">
            <div class="note">
                {{ recipe.note }}
            </div>    
            <div class="recipe_info">
                {{ recipe.content }}
            </div>
            
            <div class="recipe_img col-6 p-0 m-0">
                    <img class="col p-0" src="{{ recipe.image }}" alt="" srcset="">
            </div>
        
        </div>
         

    {{ include('recipe/_delete_form.html.twig') }} 
    
    <a type="button" class="btn btn-primary mt-5" href="{{ path('recipe_edit', {'id': recipe.id}) }}">Modifier la recette</a>
    <a type="button" class="btn btn-primary mt-5" href="{{ path('recipe_index') }}">Retourner aux recettes</a>

{% endblock %}
