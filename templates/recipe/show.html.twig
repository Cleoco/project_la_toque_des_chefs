{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-5">{{ recipe.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>CreatedAt</th>
                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ recipe.updatedAt ? recipe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ recipe.note }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ recipe.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="col-12" src="{{ recipe.image }}" alt="" srcset=""></td>
            </tr>
        </tbody>
    </table>

    {{ include('recipe/_delete_form.html.twig') }} 
    
    <a type="button" class="btn btn-primary mt-5" href="{{ path('recipe_edit', {'id': recipe.id}) }}">Modifier la recette</a>
    <a type="button" class="btn btn-primary mt-5" href="{{ path('recipe_index') }}">Retourner aux recettes</a>

{% endblock %}
